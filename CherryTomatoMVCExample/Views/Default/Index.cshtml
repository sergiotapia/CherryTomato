@model CherryTomato.Entities.Movie

@{
    if (Model != null)
    {
        ViewBag.Title = Model.Title;
    }
    else
    {
        ViewBag.Title = "Movie Information";
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 style="width: 40%; margin: 1em auto; background-color: #baf0f2; text-align: center">@ViewBag.Title</h1>

@if (@Model != null)
{
    <h3>@Model.Year</h3>
    <div id="MoviePoster">
        <img src="@Model.Posters.First().Url" alt="@Model.Posters.First().Type" />
    </div>
}